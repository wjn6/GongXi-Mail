{
    "name": "gongxi-mail-server",
    "version": "2.0.0",
    "description": "GongXi Mail Server - Fastify + TypeScript + Prisma",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "test": "tsx --test src/**/*.test.ts",
        "start": "node dist/index.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate deploy",
        "db:studio": "prisma studio"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.1",
        "@fastify/cors": "^10.0.1",
        "@fastify/helmet": "^12.0.1",
        "@fastify/rate-limit": "^10.2.0",
        "@fastify/static": "^8.0.3",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.1",
        "@prisma/client": "^6.1.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.1",
        "fastify-plugin": "^5.1.0",
        "ioredis": "^5.4.2",
        "jose": "^5.9.6",
        "mailparser": "^3.7.2",
        "node-fetch": "^3.3.2",
        "node-imap": "^0.9.6",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "socks-proxy-agent": "^8.0.5",
        "undici": "^7.16.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/bcryptjs": "^2.4.6",
        "@types/mailparser": "^3.4.5",
        "@types/node": "^22.10.2",
        "@types/node-fetch": "^2.6.13",
        "@types/node-imap": "^0.9.3",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "prisma": "^6.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.46.4"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
